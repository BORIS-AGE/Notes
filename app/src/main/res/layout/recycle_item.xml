<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="15dp">
    <!--date + preview-->
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/recyclerDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="12.05.12"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/dateColor"
            android:paddingBottom="3dp"
            />
        <TextView
            android:id="@+id/recyclerPrev"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Hoki bigscale fish. Trout; shrimpfish fathead sculpin greeneye round stingray, lined sole. Slickhead glass knifefish skate oceanic..."
            android:textColor="@color/textPreview"
            android:textSize="18sp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bottomLineRecycler"/>
    </LinearLayout>

    <!--time + button-->
    <LinearLayout
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/recyclerTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="12:05"
            android:textSize="18sp"
            android:textColor="@color/dateColor"
            android:paddingBottom="3dp"
            />
        <!--empty block-->
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_weight="1"></View>

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/recyclerButton"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_chevron_right_black_24dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bottomLineRecycler"
            android:layout_marginTop="10dp"
            />
    </LinearLayout>
</LinearLayout>